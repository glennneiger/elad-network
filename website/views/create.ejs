<% include partials/header.ejs%>

      <div class="content">
        <div class="main-content">
          <!-- Header-->
          <div class="header bg-white pb-8 pt-5 pt-md-8">
            <div class="container-fluid">
              <div class="header-body">
                <!-- Page content-->
                <div class="container">
                  <h1 class="text-center">
                    <p style="font-weight:bold; color:black; font-size:25px">Create a tokenized property</p>
                  </h1>
                  <form action="/create-property" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Property Name</label>
                      <input class="form-control" type="text" placeholder="Ex: House 123 in South London" name="propertyName" id="_propertyName" required>
                    </div>
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Token Symbol</label>
                      <input class="form-control" type="text" placeholder="Ex: HSL" name="tokenSymbol" id="_tokenSymbol" required>
                    </div>
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Token Total Supply</label>
                      <input class="form-control" type="number" placeholder="Ex: 100,000,000" name="totalSupply" id="_totalSupply" required>
                    </div>
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Price of tokens in ETH</label>
                      <input class="form-control" type="number" placeholder="Ex: 10" name="ethPrice" id="_ethPrice" required>
                    </div>
                    <!--
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Price of tokens in ELAD</label>
                      <input class="form-control" type="number" placeholder="Ex: 1,000" name="eladPrice" id="_eladPrice" required>
                    </div>
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Fallback address (optional)</label>
                      <input class="form-control" type="text" placeholder="" name="fallbackAddress" id="_fallbackAddress" required>
                    </div>
                    -->
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Property Description</label>
                      <input class="form-control" type="text" placeholder="Ex: Beautiful house in South of London" name="propertyDescription" id="prop1" required>
                    </div>
                    <div class="form-group">
                      <label style="font-weight:normal; color:black">Property Image</label>
                      <input class="form-control" type="file" id="imageInput" name="propertyImage" required>
                    </div>
                    <br>
                    <button class="btn btn-secondary" type="submit" onclick="createNew()">CREATE</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    
    <!-- End of div main-content  -->
    </div>

    <script src="../javascripts/web3lib.js"></script>
    <!-- <script src="../javascripts/createTest.js"></script> -->
    <script src="../javascripts/propertyFactory.js"></script>

