            .container
              h1.text-center
                font(color='white') Create a tokenized property
              form(action='/dashboard/create-property', method='POST')
                .form-group
                  font(color='white')
                    label(for='exampleInputEmail1') Property Name
                  input.form-control(type='text', placeholder='Ex: House 123 in South London', name='propertyName')
