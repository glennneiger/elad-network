                    label(for='exampleInputEmail1') Price of tokens in ELAD
                  input.form-control(type='text', placeholder='Ex: 1,000', name='priceInElad')
                .form-group
                  font(color='white')
                    label(for='exampleInputEmail1') Fallback address (optional)
                  input.form-control(type='text', placeholder='', name='fallbackAddress')
                .form-group
                  font(color='white')
                    label(for='exampleInputEmail1') Property Description
                  input.form-control(type='text', placeholder='Ex: Beautiful house in South of London', name='propertyDescription')
                .form-group
                  label(for='exampleInputEmail1') Property Image
                  .file-field.input-field
                    .btn.grey
                      input(name='propertyImage', type='file')
                      input.file-path.validate(type='text')
