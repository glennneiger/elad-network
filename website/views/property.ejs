<% include partials/header.ejs%>

      <div class="content">

        <div class="header bg-white pb-8 pt-5 pt-md-8">
          <div class="container-fluid">
            <div class="header-body">

            
        <div class="container" style="width: 1200px;">

          <div class="card shadow">
            <div class="card-header border-0">
              <h1 class="mb-0"><%= propertyName %></h3>
            </div>
            
            <div class="row ml-3">
              <div class="col ml-0">
                <p><%= propertyDescription %></p>
                <h3>Token symbol: <%= tokenSymbol %></h2>
                <h3>Total supply: <%= totalSupply %></h2>
                <h3>ETH price: <%= ethPrice %></h2>
                <span id="txHash"></span>
                <br><br>
                <button type="button" class="btn btn-primary" href="#" data-toggle="modal" data-target="#exampleModal">
                  Buy <%= tokenSymbol %> tokens
                </button>
              </div>

              <div class="col">
                <img src="../uploads/<%= propertyImage %>" class="img-fluid" alt="Responsive image" width="500px">
                <br><br><br>
              </div>
            </div>

            <div class="row text-center">
              <div class="col">
                <img src="../uploads/map.png" width="1000px">
                <br><br>
              </div>
            </div>

          </div>

        <br><br><br>
        
      </div>
    
    <!-- End of div main-content  -->
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title" id="exampleModalLabel">Buy <%= tokenSymbol %> tokens</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <label style="font-weight:normal; color:black">Total supply: 15,000</label><br>
            <label style="font-weight:normal; color:black">Tokens left: 2,700</label><br>
            <label style="font-weight:normal; color:black">Price of 1 <%= tokenSymbol %> token: 1 ETH</label><br>
            <input class="form-control" type="number" id="ethAmount" name="propertyImage" placeholder="Amount of ETH to send..." required>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="buyTokens()">Buy</button>
          </div>
        </div>
      </div>
    </div>

    <script src="../javascripts/purchase.js"></script>

<% include partials/footer.ejs %>