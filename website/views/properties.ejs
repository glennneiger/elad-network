<% include partials/header.ejs%>

      <div class="content">
        <div class="header bg-white pb-8 pt-5 pt-md-8">
          
          <div class="container">
            <% if(propertiesList.length == 0){ %>
              <div class="text-center">
                <div class="container">
                  <div class="card shadow py-5" style="width: 1200px; heigth:1200px">
                    <h1>No properties listed yet</h1>
                  </div>
                </div>
              </div>
            <% } else{ %>
              <div class="row">
                <% for(let i = 0; i < propertiesList.length; i++) { %>
                  <div class="col-md-4 p-2">
                    <div class="card bg-white" style="width: 20rem; height:400px; max-height:450px; min-height:450px">
                      <img class="card-img-top" src="../uploads/<%= propertiesList[i].propertyImage %>" alt="Card image cap">
                      <div class="card-body">
                        <h2 class="card-title"><%= propertiesList[i].propertyName %></h2>
                        <span id="propertyAddress"></span>
                        <!--<p class="card-text"><%= propertiesList[i].propertyDescription%></p>-->
                        <p>
                          <img src="../uploads/pin.png" class="img-fluid" alt="Responsive image" width="13px">&nbsp;
                          <%= propertiesList[i].propertyAddress %>
                        </p>
                        <h1 style="color:#000099">$<%= propertiesList[i].propertyPrice.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,') %></h1>
                          <a class="btn btn-success align-bottom" href="/properties/<%=propertiesList[i]._id%>">See property</a>
                        <!--<a href="/properties/<%=propertiesList[i]._id%>" class="btn btn-success">See property</a>-->
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
            <% } %>
